{#{% extends 'base.html.twig' %}#}
{% block body %}
    <h1>Liste des participants</h1>
    <br>
    <table>
        <tr>
            <td><h4>Name</h4></td>
            <td><h4>Email</h4></td>
            <td><h4>Speaker</h4></td>
            <td><h4>Institution</h4></td>
        </tr>
        {% for participant in participants %}
            <tr>
                <td>{{ participant.name }}</td>
                <td>{{ participant.email}}</td>
                <td>{{ participant.speaker}}</td>
                <td>{{ participant.institution}}</td>
                <td><a href={{ path('app_participant_edit', {'id': participant.id }) }}><button>editer</button></a></td>
                <td><a href={{ path('admin_participant_delete', {'id': participant.id }) }}><button>supprimer</button></a></td>
                <td><a href={{ path('app_participant_show', {'id': participant.id }) }}><button>voir</button></a></td>
            </tr>

        {% endfor %}
    </table>
    <br>
{% endblock body %}