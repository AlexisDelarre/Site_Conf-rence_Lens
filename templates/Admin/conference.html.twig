{% extends 'base.html.twig' %}
{% block body %}
    <div class="gb-breadcrumb gb-bg white-color">
        <div class="container">
            <div class="breadcrumb-info text-center">
                <div class="page-title">
                    <h1>
                        <span class="before-top"></span>
                        <span>Conference Management</span>
                        <span class="before-bottom"></span>
                    </h1>
                </div>
                <ol class="breadcrumb">
                    <li><a href="{{ path('app_homepage_index') }}">Home</a></li>
                    <li><a href="{{ path('admin') }}">Board Administrator</a></li>
                    <li class="active">Conferences Management</li>
                </ol>
            </div>
        </div><!-- /.container -->
    </div><!-- /.gb-breadcrumb -->
    <div class="title-section">
        <h1 class="color-red">
            <span class="before-top"></span>
            <span>Conferences</span>
            <span class="before-bottom"></span>
        </h1>
    </div>
    <div class="title-section">
        <h3 class="color-red">
            <span>
                <a href={{ path('app_conference_new') }}><button>→ New Conference ←</button></a>
            </span>
        </h3>
    </div>

    <div class="gb-speakers gb-section">
        <div class="container">
            <table class="table">
                <thead>
                <tr>
                    <th>Title</th>
                    <th>Lieu</th>
                    <th>Date</th>
                    <th>Date de début</th>
                    <th>Date de fin</th>
                    <th>Speaker</th>
                </tr>

                </thead>
                <tbody>
                {% for conference in conferences %}
                    <tr>
                        <td>{{ conference.title }}</td>
                        <td>{{ conference.lieu }}</td>
                        <td>{{ conference.date|date('d M') }} </td>
                        <td>{{ conference.heuredebut|date(('   H:i ')) }}</td>
                        <td>{{ conference.heurefin|date(('   H:i ')) }}</td>
                        <td>{{ conference.participant.name }}</td>
                        <td><a href={{ path('app_conference_edit', {'id':conference.id }) }}><button>Edit</button></a></td>
                        <td><a href={{ path('admin_conference_delete', {'id': conference.id }) }}><button>Delete</button></a></td>
                    </tr>

                {% endfor %}

                </tbody>
            </table>
        </div><!-- /.container -->
    </div>





{% endblock body %}





